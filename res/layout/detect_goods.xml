<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_sale_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/detect_good_pic"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/dete_good_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/detect_good_pic"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/detect_good_pic"
        android:text="丹麦香草威化饼干"
        android:gravity="center_vertical"
         />

    <TextView
        android:id="@+id/dete_good_number"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/detect_good_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:text="Number"
         />
    
    <TextView
        android:id="@+id/dete_good_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/detect_good_pic"
        android:layout_toRightOf="@+id/detect_good_pic"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="价格："
         />
    
    <TextView
        android:id="@+id/dete_good_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/detect_good_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:text="这个产品已经过期！"
         />
    

</RelativeLayout>
